<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.project.mapper.PlaceMapper">
    <select id="findByPlaceTitle" parameterType="string" resultType="com.example.project.entity.Place">
        select * from place where title= #{title}
    </select>
    <insert id ="save" parameterType="com.example.project.entity.Place">
        insert into place(title,link,address,roadAddress,mapx,mapy,category,route_id)
        values(#{place.title},
               #{place.link},
               #{place.address},
               #{place.roadAddress},
               #{place.mapx},
               #{place.mapy},
               #{place.category},
               #{route_id})
    </insert>
    <insert id = "saveRoute" parameterType="com.example.project.entity.Route">
        insert into route(title, created_at)
        values(#{title},#{created_at})
    </insert>
</mapper>